using Gtk 4.0;

template $ExampleWindow: Gtk.ApplicationWindow {
  title: "Python - PyGObject - GTK";
  default-width: 683;
  default-height: 384;

  [titlebar]
  Gtk.HeaderBar header_bar {
    [end]
    Gtk.MenuButton {
      icon-name: "open-menu-symbolic";
      menu-model: primary_menu;
    }
  }

  Gtk.Box {
    orientation: vertical;
    homogeneous: true;
    margin-top: 12;
    margin-end: 12;
    margin-bottom: 12;
    margin-start: 12;
    spacing: 12;

    Gtk.Label {
      label: "Click on the Button to select a font.";
    }

    Gtk.FontDialogButton {
      dialog: font_dialog;
      halign: center;
      valign: center;
      notify::font-desc => $on_font_selected();
    }
  }
}

Gtk.FontDialog font_dialog {
  title: "Python - PyGObject - GTK";
  modal: true;
}

menu primary_menu {
  section {
    item {
      label: _("Preferences");
      action: "app.preferences";
    }
  }
}
